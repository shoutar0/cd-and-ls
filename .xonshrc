
import sys
sys.path.append('path/to/myfunc.py')

from myfunc import CdAndLs

def cd_and_ls(arg):
	"""cd した後に ls してくれる関数。"""

	try:
		if arg[:1]:
			path = str(arg[:1][0])
		else:
	    		path = 'path/to/home'  # cd のみ (引数無し) の場合

		func = CdAndLs()
		func.main(path)  # CdAndLs クラスのメソッドを実行する。
		
		if not func.dirs_list:
			func.dirs_list = '↪︎ No Directories'
	
		if not func.files_list:
			func.files_list = '↪︎ No files'

		print(func.dir_title + func.dirs_list + func.files_title + func.files_list)

	except FileNotFoundError:
	    	print(f'\nNo such directory: "{path}"')


# エイリアスの作成
aliases["cd"] = cd_and_ls
